<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_bg"
    tools:context="com.aalj40.safeapp.ui.SplashActivity" >

    <!-- textView 设置阴影效果 -->
    <!-- android:shadowColor  设置影印的颜色 -->
    <!-- android:shadowDx  设置阴影的x轴偏移量 -->
    <!-- android:shadowDy  设置阴影的y轴偏移量 -->
    <!-- android:shadowRadius  设置阴影的偏移角度 -->

    <TextView
        android:id="@+id/tv_splash_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:shadowColor="#ffff00"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:text="版本号 1.0"
        android:textSize="30sp" />

    <ProgressBar
        android:id="@+id/progressBar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_splash_version"
        android:layout_centerHorizontal="true" />

    <TextView
        android:visibility="invisible"
        android:id="@+id/tv_splash_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:textSize="20sp"
        android:text="" />

</RelativeLayout>